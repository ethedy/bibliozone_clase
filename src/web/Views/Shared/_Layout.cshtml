<!DOCTYPE html>
<html>

<head>
  <link href="@Url.Content("~/css/site.css")" asp-append-version="true" rel="stylesheet" type="text/css" />
  <link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.css")" asp-append-version="true" rel="stylesheet" />

  @RenderSection("style_links", false)

  <title>@ViewBag.Mensaje</title>

  <script src="~/lib/popper.js/umd/popper.js"></script>
  <script src="~/lib/jquery/jquery.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

  @RenderSection("scripts_links", false)

  <style>
    html, body {
      height: 100%;
      /*min-height: 100vh;*/
      /*min-height: 100vh;*/
    }

    .contenido {
      flex: 1 0 auto;
    }

    footer {
      flex-shrink: unset;
    }

    .bd-navbar {
      position: sticky;
      top: 0;
      z-index: 1071;
    }

    .titulo {
      font-size: 1.8em;
    }

    .bz-style {
      background-color: #32679C;
    }


      .bz-style.errorXX {
        background-color: #9c324f !important;
      }

    .bz-style1 {
      background-color: #05284c;
    }

    footer div.bz-style1 {
      background-color: #05284c;
    }

    .dropdown .dropdown-menu a:hover {
      background-color: #32679C;
      color: #fdfcfa;
    }

    .dropdown-menu a.dropdown-item:hover {
      background: unset;
      background-color: #66a2de;
    }

    .navegable {
      cursor: pointer;
    }

    .force-pointer {
      cursor: pointer;
    }
  </style>

  @RenderSection("style_page", false)

  <environment include="Development">
    <style>
      footer div.bz-style {
        background-color: #9c324f;
      }
    </style>
  </environment>

  <script language="javascript" type="text/javascript">
    $(document).ready(function () {
      //window.alert("OMG!!!");
    });
  </script>

  @RenderSection("script_page", false)

</head>

