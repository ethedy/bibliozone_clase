            </a>

            <!--    TEXTO COMPLETO COLAPSA EN ANCHO REDUCIDO    -->

            <div class="collapse navbar-collapse"
                 style="flex: 0 1 auto; align-items: unset !important;">
              <div class="text-light" style="display: flex; flex-direction: column;">
                <div><span style="font-family: sans-serif; font-weight: 800; font-size: 1.2em;">Biblio</span></div>
                <div style="margin-top: -8px;">
                  <span style="font-family: sans-serif; font-weight: 800; font-size: 1.2em;">Zone</span>
                </div>
              </div>
            </div>

          </div>
        </div>

        <!--    HAMBURGUESA SOLO PARA ANCHOS REDUCIDOS    -->

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContenido">
          <span class="navbar-toggler-icon text-light"></span>
        </button>

        <!--    AREA COLAPSABLE EN ANCHO REDUCIDO PERO VISIBLE EN HAMBURGUESA    -->

        <div class="collapse navbar-collapse justify-content-between" id="navbarContenido">

          <ul class="navbar-nav">

            <!--  Menu Herramientas  -->

            <li class="nav-item dropdown">
              <a class="nav-link text-light dropdown-toggle active" data-toggle="dropdown"
                 href="#">Herramientas<span class="sr-only">(current)</span></a>

              <div class="dropdown-menu">
                <h2 class="d-none dropdown-header" style="font-size: 1.03em; font-weight: bold;">
                  Opciones
                </h2>
                <a class="dropdown-item" href="#" target="_blank">
                  Opcion
                </a>
              </div>
            </li>
          </ul>
        </div>

      </div>
    </nav>

    <div class="container-fluid">

      @RenderBody()

    </div>

  </div>

  <!--    FOOTER    -->

  <footer class="mt-4">
    <div class="container-fluid bz-style">
      <div class="row p-3">
        <div class="col-5 text-white-50">
          <span class="d-block">Nombre de la empresa</span>
          <span class="d-block">Otros datos</span>
        </div>
        <div class="col-5 text-white-50">

        </div>
        <div class="col-2">

          <span>
            Contacto mail y Quiénes Somos?
          </span>
        </div>
      </div>
    </div>
  </footer>

  @RenderSection("widgets", false)

</body>
</html>
